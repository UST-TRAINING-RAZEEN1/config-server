pipeline {
    agent any 
    tools {
        maven 'mymaven'
        jdk 'jdk'
    }
    stages {        
        stage('Clone') {
            steps {
                git url: 'https://github.com/UST-TRAINING-RAZEEN1/config-serve.git', branch: 'main'
            }
        }
        stage('Build') {
            steps {
                bat "mvn clean install -DskipTests"
            }
        }
        stage('Test') {
            steps {
                bat "mvn test"
            }
        }
        stage('Deploy') {
            steps { 
                bat "docker rm -f config-container"
                bat "docker rmi -f config-image"
                bat "docker build -t config-image ."
                bat "docker run -p 8088:8088 -d --name config-container config-image"
            }
        }
    }
}
